<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.cxist.notification" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Messaging</name>
    <js-module name="Messaging" src="www/Messaging.js">
        <clobbers target="cordova.plugins.Messaging" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="Messaging">
                <param name="android-package" value="com.cxist.notification.Messaging" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>

        <config-file parent="/*" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.WAKE_LOCK" />
            <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
        </config-file>

        <source-file src="src/android/Messaging.kt" target-dir="app/src/main/kotlin/com/cxist/notification" />
        <source-file src="src/android/message/Actions.kt" target-dir="app/src/main/kotlin/com/cxist/notification/message" />
        <source-file src="src/android/message/MessageData.kt" target-dir="app/src/main/kotlin/com/cxist/notification/message" />
        <source-file src="src/android/message/MirrorMESService.kt" target-dir="app/src/main/kotlin/com/cxist/notification/message" />
        <source-file src="src/android/message/ServiceTracker.kt" target-dir="app/src/main/kotlin/com/cxist/notification/message" />
        <source-file src="src/android/message/SignalR.kt" target-dir="app/src/main/kotlin/com/cxist/notification/message" />
        <source-file src="src/android/message/StartReceiver.kt" target-dir="app/src/main/kotlin/com/cxist/notification/message" />
        <source-file src="src/android/message/Utils.kt" target-dir="app/src/main/kotlin/com/cxist/notification/message" />

        <framework src="src/android/build-extras.gradle" custom="true" type="gradleReference" />
    </platform>
</plugin>